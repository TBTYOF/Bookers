<h1 class="page_title">Editing Book</h1>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h2 class="error_font"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<div class="text_field">
			<h4 class="title">Title</h4>
			<%= f.text_field :title %>
		</div>
		<div class="text_field">
			<h4 class="title">Body</h4>
			<%= f.text_area :body %>
		</div>
		<p class="text_field"><%= f.submit 'Update Book' %></p>

	<% else %>
		<div class="text_field">
			<h4>Title</h4>
			<%= f.text_field :title %>
		</div>
		<div class="text_field">
			<h4>Body</h4>
			<%= f.text_area :body %>
		</div>
		<p class="text_field"><%= f.submit 'Update Book' %></p>
	<% end %>
<% end %>

<p><%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %></p>